---
import Footer from '@/components/Footer.astro'
import Header from '@/components/Header.astro'

interface Props {
	title: string
	headerItems: string
}

const { title, headerItems } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header headerItems={headerItems} />
		<slot />
		<Footer />
		<div id="overlay" class="fixed inset-0 bg-black bg-opacity-50 items-center justify-center z-50 hidden">
			<div class="p-6 flex flex-col items-center justify-center">
				<div class="h-10 w-10 animate-spin rounded-full border-4 border-t-[#892C14] mb-10" />
				<p class="text-white">Cargando...</p>
			</div>
		</div>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light;
	}
	html {
		font-family: 'Onest Variable', system-ui, sans-serif;
		background: white;
		scroll-behavior: smooth;
	}

	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
</style>
